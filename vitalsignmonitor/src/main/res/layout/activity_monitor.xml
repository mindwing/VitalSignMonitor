<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.re.etri.iotivity.vitalsignmonitor.MonitorActivity">

    <TextView
        android:id="@+id/update_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="== 최근 갱신일 ==" />

    <TextView
        android:id="@+id/update_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_date_label"
        android:layout_marginTop="10dp"
        android:text="----년 --월 --일 --시 --분 --초" />

    <TextView
        android:id="@+id/data_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_date"
        android:layout_marginTop="30dp"
        android:text="== Vital Sign ==" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/data_label"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line_spo2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_label"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#dfdfdf"
                android:gravity="center"
                android:text="[SpO2]" />

            <TextView
                android:id="@+id/spo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/spo2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#ef7f7f"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/spo2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#af7f7f"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/spo2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#7f7f7f"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_heart_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_label"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#dfdfdf"
                android:gravity="center"
                android:text="[심박수]" />

            <TextView
                android:id="@+id/heart_rate"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/heart_rate_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#ef7f7f"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/heart_rate_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#af7f7f"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/heart_rate_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#7f7f7f"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/line_systolic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_label"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#dfdfdf"
                android:gravity="center"
                android:text="[수축기혈압]" />

            <TextView
                android:id="@+id/systolic"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/systolic_1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#ef7f7f"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/systolic_2"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#af7f7f"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/systolic_3"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#7f7f7f"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/line_diastolic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_label"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#dfdfdf"
                android:gravity="center"
                android:text="[이완기혈압]" />

            <TextView
                android:id="@+id/diastolic"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/diastolic_1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#ef7f7f"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/diastolic_2"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#af7f7f"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/diastolic_3"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#7f7f7f"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/line_body_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_label"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#dfdfdf"
                android:gravity="center"
                android:text="[체온]" />

            <TextView
                android:id="@+id/body_temp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/body_temp_1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#ef7f7f"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/body_temp_2"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#af7f7f"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/body_temp_3"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#7f7f7f"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/line_glucose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_label"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#dfdfdf"
                android:gravity="center"
                android:text="[혈당]" />

            <TextView
                android:id="@+id/glucose"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/glucose_1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#ef7f7f"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/glucose_2"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#af7f7f"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/glucose_3"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#7f7f7f"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>
    </LinearLayout>

    <ToggleButton
        android:id="@+id/connect"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:onClick="toggleConnection"
        android:textAllCaps="false"
        android:textOff="Press here to connect to Vital Sign Device"
        android:textOn="Press here to disconnect from Vital Sign Device" />

</RelativeLayout>
